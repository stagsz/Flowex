# Flowex Frontend Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Development Settings
# =============================================================================

# Bypass authentication in development (set to "true" to enable)
# Creates a mock user automatically - DO NOT use in production
VITE_DEV_AUTH_BYPASS=true

# Backend API URL
# Development: http://localhost:8000
# Staging: https://api.staging.flowex.io
# Production: https://api.flowex.io
VITE_API_URL=http://localhost:8000

# =============================================================================
# Auth0 Configuration (Required for Production)
# =============================================================================

# Auth0 domain (e.g., your-tenant.auth0.com)
VITE_AUTH0_DOMAIN=

# Auth0 client ID (from Auth0 dashboard)
VITE_AUTH0_CLIENT_ID=

# =============================================================================
# Monitoring (Optional)
# =============================================================================

# Sentry DSN for error tracking (leave empty to disable)
VITE_SENTRY_DSN=

# Environment name for Sentry (development, staging, production)
VITE_SENTRY_ENVIRONMENT=development
